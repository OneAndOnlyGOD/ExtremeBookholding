<Window x:Class="ExtremeBookHolding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtremeBookHolding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Eröffnungsbilanz">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="38*"/>
                        <RowDefinition Height="353*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Margin="3" VerticalAlignment="Center" Orientation="Horizontal">
                        <Label Padding="6,3,10,3">Konto</Label>
                        <ComboBox x:Name="accountbox" Width="150" Padding="6,3,10,3"></ComboBox>
                        <Label Padding="6,3,10,3">Betrag</Label>
                        <TextBox Padding="6,3,10,3">2.50</TextBox>
                    </StackPanel>
                    <Grid Margin="0,31,0,0.2" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="12*"/>
                            <RowDefinition Height="118*"/>
                        </Grid.RowDefinitions>
                        <Separator Grid.ColumnSpan="2" VerticalAlignment="Bottom"/>
                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                            <Button>text</Button>
                            <Button>neuer text</Button>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                            <Button>text2</Button>
                            <Button>neuer text2</Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Journal">
                <Grid/>
            </TabItem>
            <TabItem Header="Hauptbuch und Schlussbilanz">
                <Grid/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
